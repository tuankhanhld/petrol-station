<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt_home"
        android:layout_width="54.6dp"
        android:layout_height="54.6dp"
        app:civ_border_color="#ffffff"
        android:background="@color/placeholder_bg"
        app:civ_border_width="3dp"/>
    <TextView
        android:id="@+id/name_home"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_light"
        android:layout_toRightOf="@+id/avt_home"
        android:layout_marginLeft="16dp"
        android:background="@color/placeholder_bg"
        />
    <TextView
        android:id="@+id/phone_number_home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_light"
        android:layout_toRightOf="@+id/avt_home"
        android:layout_below="@+id/name_home"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:background="@color/placeholder_bg"/>
</RelativeLayout>