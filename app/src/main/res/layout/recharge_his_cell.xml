<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recharge_his_cell"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:id="@+id/infor_his_recharge_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="#AFAFAF"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Series_number"
                    android:textColor="#AFAFAF"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Money"
                    android:textColor="#AFAFAF"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:id="@+id/recharge_his_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuankhanhspkt@gmail.com"
                    android:textColor="#F57E85"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat" />
                <TextView
                    android:id="@+id/recharge_his_series"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2153561248795"
                    android:textColor="#F57E85"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat" />
                <TextView
                    android:id="@+id/recharge_his_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200000 vnd"
                    android:textColor="#F57E85"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/recharge_his_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/10/2019 00:00:00"
            android:textColor="#F57E85"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:layout_below="@+id/infor_his_recharge_con"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>
</RelativeLayout>