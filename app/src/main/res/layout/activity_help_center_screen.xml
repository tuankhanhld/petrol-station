<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpCenterScreen"
    android:background="@color/white">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">
            <LinearLayout
                android:id="@+id/img_top"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/send_help_settings_top"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/help_title"
                    android:textAlignment="center"
                    android:textColor="#5D5555"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_top"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/Subject"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/subjectFill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/subfill"
                    android:fontFamily="@font/montserrat"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/write_question"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/write_help"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp">
                    <EditText
                        android:id="@+id/contentMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textSize="14sp"
                        android:backgroundTint="@color/white"

                        />
                </RelativeLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btnSendHelp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="29dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_wave_eff"
                android:text="Send"
                android:textColor="@color/white"
                android:layout_below="@+id/body"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/effect_btn_back"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>
</RelativeLayout>