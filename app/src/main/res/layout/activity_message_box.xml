<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageBox"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/top_message_container">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/effect_btn_back"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_call"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:id="@+id/infor_top_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/receiveAvatar"
                    android:layout_width="54.6dp"
                    android:layout_height="54.6dp"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="3dp" />
                <TextView
                    android:id="@+id/receiveName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_toRightOf="@+id/receiveAvatar"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:id="@+id/receiverPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:layout_toRightOf="@+id/receiveAvatar"
                    android:layout_below="@+id/receiveName"
                    android:layout_marginLeft="16dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:layout_below="@+id/topContainer"
        android:divider="@null">
    </ListView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/typeContent"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp"
                android:background="@drawable/bg_edit_message"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:hint="Type the message"/>
            <Button
                android:id="@+id/btnSendMessage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_btn_send_message"
                android:layout_toRightOf="@+id/typeContent"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>