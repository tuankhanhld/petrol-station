<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bill_payment_history"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/typePayHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oil payment"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp">
            <TextView
                android:id="@+id/amountHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2 lit"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="55dp"
                />
            <TextView
                android:id="@+id/moneyPayHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.000d"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="50dp"
                />
            <TextView
                android:id="@+id/dateHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/3/2019 2:00:00"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="25dp"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>